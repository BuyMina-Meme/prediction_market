# Server Configuration
PORT=3001
NODE_ENV=development

# Zeko L2 Network
ZEKO_NETWORK_URL=https://devnet.zeko.io/graphql
CHAIN=devnet

# Contract Addresses (set after deployment)
REGISTRY_ADDRESS=
DOOT_ORACLE_ADDRESS=

# Deployer Private Key (base58)
DEPLOYER_PRIVATE_KEY=

# Upstash Redis Configuration (Required)
# Get from: https://console.upstash.com/ → Create Database → REST API
UPSTASH_REDIS_REST_URL=https://your-db.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here

# IPFS/Pinata Configuration (optional for advanced features)
PINATA_JWT=
PINATA_GATEWAY=https://gateway.pinata.cloud

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Settlement Monitor
SETTLEMENT_CHECK_INTERVAL=30000
DOOT_POLL_INTERVAL=10000
